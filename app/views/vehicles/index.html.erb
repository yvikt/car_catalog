<%= render 'vehicles/pager' %>

<div class="row row-cols-1 row-cols-md-3">
  <%  @vehicles.each do |vehicle| %>
    <div class="col mb-4">
      <div class="card">
      <img src="<%= vehicle.img_url %>" class="card-img-top" alt="car image">
      <div class="card-body">
        <h5 class="card-title">model: <%= vehicle.model  || 'not defined' %></h5>
        <p class="card-text">
          <%= draw_tags vehicle.tags %>
        </p>
        <p class="card-text">
          <%=link_to 'Details', vehicle_path(vehicle.id), class: "btn btn-info" %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= render 'vehicles/pager' %>

